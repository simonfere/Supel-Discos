{% extends 'base.html.twig' %}

{% block title %}Productos en formato {{ formato.tipo }}{% endblock %}

{% block body %}
    {% include('components/navbar.html.twig') %}

    <h1 class="text-color-light">Álbumes en {{ formato.tipo }} </h1>

    <div class="row row-cols-1 row-cols-md-3 g-4 mt-4">
        {% for producto in productos %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ asset('musica/'~producto.artista~' - '~producto.nombre~' ['~producto.anoSalida~']/cover.jpg') }}" class="card-img-top" alt="Portada del álbum {{ producto.nombre }}">
                    <div class="card-body">
                        <h5 class="card-title"><a href="{{ path('app_productos', {id: producto.id }) }}" class="lnk-concierto">{{ producto.nombre }}</a></h5>
                        <p class="card-text">{{ producto.artista }}</p>
                    </div>
                    <div class="card-footer">
                        <small class="entradas-disponibles">{{ producto.formato }}</small>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
{% endblock %}
{% block stylesheets %}
    <style>
        li {
            margin-bottom: 20px;
            margin-top: 10px;
            margin-left: 20px;
            list-style-type: none;
        }
    </style>

{% endblock %}
