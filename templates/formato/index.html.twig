{% extends 'base.html.twig' %}

{% block title %}Productos en formato {{ formato.tipo }}{% endblock %}

{% block body %}
    {% include('components/navbar.html.twig') %}

    <h1>√Ålbumes en {{ formato.tipo }} </h1>

    {% for producto in productos %}
        <li><a href="{{ path('app_productos', { id: producto.id}) }}">{{ producto.artista }} - {{ producto.nombre }} ({{ producto.anoSalida }})</a></li>
    {% endfor %}
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
{% endblock %}
{% block stylesheets %}
    <style>
        li {
            margin-bottom: 20px;
            margin-top: 10px;
            margin-left: 20px;
            list-style-type: none;
        }
    </style>

{% endblock %}
