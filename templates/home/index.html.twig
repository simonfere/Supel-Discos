{% block stylesheets %}

	<style>
		@import url('https://fonts.googleapis.com/css2?family=Pacifico &family=Rubik&display=swap');:root {
			--bgcolorNav: #77B6EA;
			--bgcolorBody: #C7D3DD;
			--font_main: "Rubik", sans-serif;
			--font_titulo: "Pacifico", sans-serif;
		}

		.navbar-brand {
			font-family: var(--font_titulo);
			font-size: 32px !important;
		}

		.nav-item {

			font-size: 26px !important;

		}

		.navbar {
			padding: 2rem;
			background-color: var(--bgcolorNav);
		}

		body {
			font-family: var(--font_main) !important;
			background-color: var(--bgcolorBody) !important;
		}

		.navbar-collapse {
			align-items: center;
			justify-content: space-between;
		}

		/* Responsive */

		@media screen and(max-width: 767px) {
			.navbar-brand {
				display: none;
			}
		}

		.carousel-inner {
			margin-top: 10px;
		}
	</style>

