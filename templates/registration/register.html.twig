    <section class="vh-100">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-6 text-black">
                    <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                        <form style="width: 23rem;" action="{{ path('app_register') }}" method="post">

                            <h3 class="title-login">regístrate en musicprair.ie</h3>

                            <div class="form-outline mb-4">
                                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control form-control-lg', 'type': 'email'}}) }}
                                {{ form_label(registrationForm.email, 'correo electrónico', {'label_attr': {'class': 'labelFormUser'}}) }}
                            </div>

                            <div class="form-outline mb-4">
                                {{ form_widget(registrationForm.nombre, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                {{ form_label(registrationForm.nombre, 'nombre', {'label_attr': {'class': 'labelFormUser'}}) }}
                            </div>

                            <div class="form-outline mb-4">
                                {{ form_widget(registrationForm.apellidos, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                {{ form_label(registrationForm.apellidos, 'apellidos', {'label_attr': {'class': 'labelFormPass'}}) }}
                            </div>

                            <div class="form-outline mb-4">
                                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control form-control-lg'}}) }}
                                {{ form_label(registrationForm.plainPassword, 'contraseña', {'label_attr': {'class': 'labelFormPass'}}) }}
                            </div>

                            <div class="mb-2 mb-lg-4 text-light">
                                {{ form_widget(registrationForm.agreeTerms) }}
                                {{ form_label(registrationForm.agreeTerms, 'Acepto términos y condiciones') }}
                            </div>



                            <div class="pt-1 mb-4">
                                <input class="login-button" type="submit" value="Entrar">
                                {{ form_end(registrationForm) }}
                            </div>


                        </form>

                    </div>

                </div>
